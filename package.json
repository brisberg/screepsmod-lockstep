{
  "name": "@brisberg/screepsmod-lockstep",
  "version": "1.2.0",
  "description": "A Screeps Server Mod which prevents the server from ticking unless a tick() is requested. Suitable for unit/integration testing of scripts where you need fine-grained control over tick events.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "keywords": [
    "typescript",
    "screeps",
    "mod"
  ],
  "author": "brisberg <brandon.risberg@gmail.com>",
  "license": "MIT",
  "repository": "https://github.com/brisberg/screepsmod-lockstep.git",
  "bugs": {
    "url": "https://github.com/brisberg/screepsmod-lockstep/issues"
  },
  "homepage": "https://github.com/brisberg/screepsmod-lockstep#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "build": "tsc",
    "run": "node lib/index.js",
    "test": "yarn build && jest --runInBand",
    "lint": "eslint \"src/**/*.ts\""
  },
  "devDependencies": {
    "@brisberg/screeps-test-server": "^0.2.0",
    "@types/jest": "^26.0.0",
    "@types/q": "^1.5.4",
    "@typescript-eslint/eslint-plugin": "^3.4.0",
    "@typescript-eslint/parser": "^3.4.0",
    "clang-format": "^1.4.0",
    "dotenv": "^8.2.0",
    "eslint": "^7.3.1",
    "eslint-config-google": "^0.14.0",
    "jest": "^26.1.0",
    "q": "^1.5.1",
    "screeps": "^4.1.6",
    "ts-jest": "^26.1.1",
    "typescript": "3.9.4"
  }
}
